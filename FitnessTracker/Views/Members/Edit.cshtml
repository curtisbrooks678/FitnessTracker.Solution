@model FitnessTracker.Models.Member

<h4>Edit this member: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MemberId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@required="required"})

  @Html.LabelFor(model => model.StartDate)
  @Html.TextBoxFor(model => model.StartDate, new {@type="date", @required="required"})

  @Html.Label("Select gym")
  @Html.DropDownList("GymId")

  <button class="btn" type="submit">Edit member</button>
}